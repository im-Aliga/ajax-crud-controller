@model List<ListItemViewModel>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Authors</h4>
        </div><!--end card-header-->
       
         <partial name="Partials/_AuthorModal"/>
        
         
        @*<div></div>*@
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>LastName</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody id="author-area">
                        @foreach (var author in Model)
                        {
                            <tr id="row-@author.Id">
                                <td>@author.Name</td>
                                <td>@author.LastName</td>
                                <td class="text-end">
                                    <partial name="Partials/_AuthorUpdateModal"/>
                                    <button class="updateid" data-id="row-@author.Id" type="button" onclick="deleteAuthor(this)">Delete</button>
                                    <a asp-route="author-delete-individual" asp-route-id="@author.Id"></a>
                                    <a class=""> </a>
                                </td>
                            </tr>
                        }

                        <tr id="row-template" class="d-none">
                            <td class="name-td">As</td>
                            <td class="last-td">Sa</td>
                            <td class="links-td text-end">
                                
                                <partial name="Partials/_AuthorUpdateModal" />
                                @*<button data-id="" onclick="deleteAuthor(this)" type="button">Delete</button>*@
                                @*<a class="primary-add" asp-route="author-delete-individual" asp-route-id=""></a>*@
                            </td>
                        </tr>
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>


